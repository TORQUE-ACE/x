---
const menuItems = ["Home", "Map", "Registration", "Settings"];
---

<style>
.sidebar {
  width: 250px;
  height: 100vh;
  background: #1e1e2e;
  color: white;
  padding: 20px;
  position: fixed;
}
.sidebar ul {
  list-style: none;
  padding: 0;
}
.sidebar li {
  padding: 10px;
  cursor: pointer;
  transition: background 0.3s;
}
.sidebar li:hover {
  background: #333;
}
</style>

<div class="sidebar">
  <h2>Drone Control</h2>
  <ul>
    {menuItems.map((item) => (
      <li>{item}</li>
    ))}
  </ul>
</div>
